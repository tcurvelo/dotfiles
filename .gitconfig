[user]
	name = Thiago Curvelo
	email = tcurvelo@gmail.com

[alias]
	lg = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(blue)(%ar)%C(reset) %C(bold blue)%s%C(reset) %C(bold)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative

[core]
	editor = code --wait
	excludesfile = ~/.gitignore_global
	pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
	features = line-numbers hyperlinks decorations
	hyperlinks-file-link-format = "vscode://file/{path}:{line}"
	navigate = true

[push]
	default = current

[credential]
	helper = cache

[color]
	ui = true

[pull]
	ff = only
	rebase = true

[init]
	defaultBranch = main

[rebase]
	autostash = true

[commit]
	verbose = true

[diff]
	algorithm = histogram
