{
    "editor.fontFamily": "'Victor Mono', 'FuraCode Nerd Font', 'Droid Sans', 'monospace'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.fontWeight": "700",
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",

    "explorer.confirmDelete": false,

    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.colorTheme": "Æ’ - Monokai - Operator Mono/Italic",
    "workbench.startupEditor": "newUntitledFile",

    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "files.exclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/__pycache__": true,
        "**/.direnv": true,
        "**/.eggs": true,
        "**/.ipynb_checkpoints": true,
        "**/.pytest_cache": true,
        "**/.scrapy": true,
        "**/.tox": true,
        "**/.venv": true,
        "**/*.egg-info": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/__pycache__": true,
        "**/.direnv": true,
        "**/.eggs": true,
        "**/.ipynb_checkpoints": true,
        "**/.pytest_cache": true,
        "**/.scrapy": true,
        "**/.tox": true,
        "**/.venv": true,
        "**/*.egg-info": true
    },
    "files.trimTrailingWhitespace": true,

    "python.formatting.provider": "black",
    "python.formatting.blackArgs":[
        "--skip-string-normalization"
    ],
    "python.autoComplete.extraPaths": [
        "~/.pyenv/versions/tools",
        "~/.pyenv/versions/tools/bin",
        "~/.pyenv/versions/tools/lib"
    ],
    "python.linting.pylintPath": "~/.pyenv/versions/tools/bin/pylint",
    "python.formatting.blackPath": "~/.pyenv/versions/tools/bin/black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },

    "cSpell.ignoreWords": [
        "canonicalize",
        "apikey",
        "dont_",
        "ipdb",
    ],

    "cSpell.userWords": [
        "scrapy",
        "incapsula",
        "proxy",
    ],

    "emmet.syntaxProfiles": { "javascript": "jsx" },
    "emmet.triggerExpansionOnTab": true,

    "terminal.integrated.fontSize": 13,
    "telemetry.enableCrashReporter": false,
    "gitlens.advanced.telemetry.enabled": false,
    "telemetry.enableTelemetry": false,
    "python.languageServer": "Pylance",
    "window.zoomLevel": 1,
    "vsicons.dontShowNewVersionMessage": true,

    // ESLint settings
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": false
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "prettier.disableLanguages": [
        "javascript",
        "javascriptreact"
    ],
}
