{
    "editor.fontFamily": "'Victor Mono', 'FuraCode Nerd Font', 'Droid Sans', 'monospace'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.fontWeight": "700",
    "editor.minimap.enabled": false,

    "explorer.confirmDelete": false,
    "files.trimTrailingWhitespace": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.startupEditor": "newUntitledFile",
    "emmet.syntaxProfiles": { "javascript": "jsx" },
    "emmet.triggerExpansionOnTab": true,

    "files.exclude": {
        "**/__pycache__": true,
        "**/.eggs": true,
        "**/.ipynb_checkpoints": true,
        "**/.pytest_cache": true,
        "**/.scrapy": true,
        "**/.tox": true,
        "**/.venv": true,
        "**/*.egg-info": true
    },

    "python.formatting.provider": "black",
    "python.formatting.blackArgs":[
        "--skip-string-normalization"
    ],
    "python.autoComplete.extraPaths": [
        "~/.pyenv/versions/tools",
        "~/.pyenv/versions/tools/bin",
        "~/.pyenv/versions/tools/lib"
    ],
    "python.linting.pylintPath": "~/.pyenv/versions/tools/bin/pylint",
    "python.formatting.blackPath": "~/.pyenv/versions/tools/bin/black",

    "[javascript]": {
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "workbench.colorTheme": "Bear Theme",
    "terminal.integrated.fontSize": 13,
    "window.zoomLevel": 1
}
