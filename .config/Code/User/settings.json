{
    "editor.fontFamily": "'Victor Mono', 'FuraCode Nerd Font', 'Droid Sans', 'monospace'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.fontWeight": "700",
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",

    "explorer.confirmDelete": false,

    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.colorTheme": "Bear Theme",
    "workbench.startupEditor": "newUntitledFile",

    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.eggs": true,
        "**/.ipynb_checkpoints": true,
        "**/.pytest_cache": true,
        "**/.scrapy": true,
        "**/.tox": true,
        "**/.venv": true,
        "**/*.egg-info": true
    },
    "files.trimTrailingWhitespace": true,

    "python.formatting.provider": "black",
    "python.formatting.blackArgs":[
        "--skip-string-normalization"
    ],
    "python.autoComplete.extraPaths": [
        "~/.pyenv/versions/tools",
        "~/.pyenv/versions/tools/bin",
        "~/.pyenv/versions/tools/lib"
    ],
    "python.linting.pylintPath": "~/.pyenv/versions/tools/bin/pylint",
    "python.formatting.blackPath": "~/.pyenv/versions/tools/bin/black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },

    "emmet.syntaxProfiles": { "javascript": "jsx" },
    "emmet.triggerExpansionOnTab": true,
    "[javascript]": {
        "editor.tabSize": 2
    },

    "terminal.integrated.fontSize": 13,
    "window.zoomLevel": 1
}
